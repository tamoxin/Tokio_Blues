<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tumblr.tamoxin.tokioblues" >

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:screenOrientation="portrait"
            android:name="com.tumblr.tamoxin.tokioblues.ipAddressActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tumblr.tamoxin.tokioblues.accelerometerInfo"
            android:label="@string/title_activity_accelerometer_info"
            android:screenOrientation="portrait"
            android:parentActivityName="com.tumblr.tamoxin.tokioblues.ipAddressActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tumblr.tamoxin.tokioblues.ipAddressActivity" />
        </activity>
    </application>

</manifest>
